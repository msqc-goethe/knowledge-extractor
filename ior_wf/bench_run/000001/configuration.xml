<?xml version="1.0" encoding="UTF-8"?>
<jube version="2.4.2">
  <benchmark file_path_ref="../.." name="ior" outpath="..">
    <comment>Ior benchmark</comment>
    <parameterset name="ior_parameter">
      <parameter mode="text" name="nodes" separator=";" type="string">10;20;40;80</parameter>
      <parameter mode="text" name="blockSize" separator=";" type="string">4m</parameter>
      <parameter mode="text" name="transferSize" separator=";" type="string">2m</parameter>
      <parameter mode="text" name="segmentCount" separator="," type="int">32</parameter>
      <parameter mode="text" name="outputPath" separator="," type="string">/scratch/fuchs/aglippert/zhuz/test80</parameter>
    </parameterset>
    <step name="execute">
      <use>ior_parameter</use>
      <do>module load mpi/openmpi/3.1.2-gcc-8.2.0</do>
      <do>module load ior-3.3.0-gcc-4.8.5-4g27txg</do>
      <do>mpirun -n $nodes ior -a mpiio -b $blockSize -t $transferSize -s $segmentCount -F -C -e -o $outputPath -k -O summaryFormat=json</do>
    </step>
  </benchmark>
</jube>
